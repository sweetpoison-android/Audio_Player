<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Player">
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="130dp"
    android:layout_height="130dp"
    android:id="@+id/playerCircleImageview"
    android:src="@drawable/masti"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="50dp"/>

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/voice"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_mic_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playertextview"
        android:layout_below="@id/playerCircleImageview"
        android:layout_marginTop="50dp"
        android:text="songname"
        android:gravity="center"
        android:singleLine="true"
        android:marqueeRepeatLimit="marquee_forever"
        android:textSize="22sp"
        android:textAlignment="center"
        android:ellipsize="marquee"
        android:scrollHorizontally="true"/>
    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/playerProgressbar"
        android:layout_below="@id/playertextview"
        android:layout_marginTop="50dp"/>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/playerProgressbar"
       android:layout_marginTop="50dp">
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/playerplaybutton"
            android:background="@drawable/pause"
            android:backgroundTint="@color/colorAccent"
            android:layout_centerHorizontal="true" />
       <Button
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:id="@+id/playerbackButton"
           android:layout_toLeftOf="@id/playerplaybutton"
           android:background="@drawable/backword"
           android:layout_marginRight="20dp"
           />
       <Button
           android:layout_width="50dp"
           android:layout_height="50dp"
           android:id="@+id/playernextButton"
           android:layout_toRightOf="@id/playerplaybutton"
           android:background="@drawable/forward"
           android:layout_marginLeft="20dp"/>
   </RelativeLayout>
</RelativeLayout>
</ScrollView>